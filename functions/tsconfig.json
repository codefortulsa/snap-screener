{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "outDir": "lib",
    "sourceMap": true,

    "allowJs": true,
    "checkJs": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "typeRoots": ["./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
